<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="16dp"
    android:gravity=""
    android:orientation="vertical">

    <TextView
        android:textColor="@color/mainColor"
        android:gravity="center"
        android:text="Memory Details"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20sp"
        android:text="Caption:"
        android:textColor="@color/mainColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/alartMemoriesCaptionTvId"
        android:hint="Title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:textSize="20sp"
        android:text="Description: "
        android:textColor="@color/mainColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/alartMemoriesDescriptionTvId"
        android:hint="description"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:textSize="20sp"
        android:text="Date:"
        android:textColor="@color/mainColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/alartMemriesDate"
        android:hint="Lunch"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:textSize="20sp"
        android:text="Time: "
        android:textColor="@color/mainColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/alartMemoriesTimeTvId"
        android:hint="date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/alartMemoriesCloseTvID"
        android:padding="8dp"
        android:textColor="@color/darkRed"
        android:layout_gravity="right"
        android:text="Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>